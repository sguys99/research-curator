# Application
APP_NAME="Research Curator"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/research_curator

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=research_articles
QDRANT_VECTOR_SIZE=1536

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Search APIs
SERPER_API_KEY=your-serper-api-key-here
BRAVE_API_KEY=your-brave-api-key-here

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Research Curator

# Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
MAGIC_LINK_EXPIRE_MINUTES=15
ACCESS_TOKEN_EXPIRE_DAYS=30

# Scheduler
COLLECT_SCHEDULE_HOUR=1
COLLECT_SCHEDULE_MINUTE=0
SEND_EMAIL_SCHEDULE_HOUR=8
SEND_EMAIL_SCHEDULE_MINUTE=0

# Data Collection
DEFAULT_ARTICLES_PER_DAY=5
MAX_ARTICLES_PER_SOURCE=10

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
